@model IEnumerable<ProyectoTransportesMana.Models.Buseta>

@{
    ViewData["Title"] = "Listado de Busetas";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<h1 class="mb-4">
    <i class="bi bi-bus-front"></i> Gestión de Busetas
</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-4">
    <div class="col-md-6">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Buseta
        </a>
        <a asp-action="Activas" class="btn btn-success">
            <i class="bi bi-eye"></i> Ver Solo Activas
        </a>
        <a asp-action="DetalleAsignaciones" class="btn btn-info">
            <i class="bi bi-people"></i> Ver Asignaciones
        </a>
    </div>
    <div class="col-md-6 text-end">
        <span class="badge bg-success me-2">
            <i class="bi bi-circle-fill"></i> Activa
        </span>
        <span class="badge bg-secondary">
            <i class="bi bi-circle"></i> Inactiva
        </span>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>Estado</th>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Placa)</th>
                <th>@Html.DisplayNameFor(model => model.Capacidad)</th>
                <th>@Html.DisplayNameFor(model => model.NombreConductor)</th>
                <th>@Html.DisplayNameFor(model => model.Jornada)</th>
                <th>@Html.DisplayNameFor(model => model.HorarioServicio)</th>
                <th>@Html.DisplayNameFor(model => model.CedulaConductor)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.Activa ? "" : "table-secondary")">
                    <td class="text-center">
                        @if (item.Activa)
                        {
                            <span class="badge bg-success" title="Buseta Activa">
                                <i class="bi bi-circle-fill"></i>
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary" title="Buseta Inactiva">
                                <i class="bi bi-circle"></i>
                            </span>
                        }
                    </td>
                    <td>@item.Id</td>
                    <td>
                        <strong>@item.Placa</strong>
                    </td>
                    <td>@item.Capacidad</td>
                    <td>@item.NombreConductor</td>
                    <td>@item.Jornada</td>
                    <td>@item.HorarioServicio</td>
                    <td>@item.CedulaConductor</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Asignaciones" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Ver Asignaciones">
                                <i class="bi bi-people"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-bus-front text-muted" style="font-size: 3rem;"></i>
        <h4 class="text-muted mt-3">No hay busetas registradas</h4>
        <p class="text-muted">Comienza agregando una nueva buseta al sistema.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Agregar Primera Buseta
        </a>
    </div>
}
