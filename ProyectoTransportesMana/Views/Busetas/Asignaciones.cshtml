@{
    ViewData["Title"] = "Asignaciones de Buseta";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";

    var buseta = ViewBag.Buseta as ProyectoTransportesMana.Models.Buseta;
    var asignaciones = ViewBag.Asignaciones as List<ProyectoTransportesMana.Models.AsignacionEstudianteBuseta>;
}

<h1 class="mb-4">
    <i class="bi bi-people"></i> Asignaciones de Buseta
</h1>

@if (buseta != null)
{
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-bus-front"></i> Información de la Buseta
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <strong>ID:</strong> @buseta.Id
                        </div>
                        <div class="col-md-3">
                            <strong>Placa:</strong> @buseta.Placa
                        </div>
                        <div class="col-md-3">
                            <strong>Capacidad:</strong> @buseta.Capacidad
                        </div>
                        <div class="col-md-3">
                            <strong>Estado:</strong>
                            @if (buseta.Activa)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-circle-fill"></i> Activa
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-circle"></i> Inactiva
                                </span>
                            }
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6">
                            <strong>Conductor:</strong> @buseta.NombreConductor
                        </div>
                        <div class="col-md-6">
                            <strong>Horario:</strong> @buseta.HorarioServicio
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row mb-3">
    <div class="col-md-6">
        <h5>
            <i class="bi bi-person-check"></i> Estudiantes Asignados
            <span class="badge bg-primary">@(asignaciones?.Count ?? 0)</span>
        </h5>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Listado
        </a>
    </div>
</div>

@if (asignaciones != null && asignaciones.Any())
{
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-light">
                <tr>
                    <th>ID Asignación</th>
                    <th>ID Estudiante</th>
                    <th>Fecha de Asignación</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var asignacion in asignaciones)
                {
                    <tr>
                        <td>@asignacion.IdAsignacion</td>
                        <td>@asignacion.IdEstudiante</td>
                        <td>@asignacion.FechaAsignacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (asignacion.Activa)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Activa
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-x-circle"></i> Inactiva
                                </span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-warning" title="Editar Asignación">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-sm btn-danger" title="Eliminar Asignación">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-person-x text-muted" style="font-size: 3rem;"></i>
        <h4 class="text-muted mt-3">No hay estudiantes asignados</h4>
        <p class="text-muted">Esta buseta no tiene estudiantes asignados actualmente.</p>
        <button class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Asignar Estudiante
        </button>
    </div>
}

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-info-circle"></i> Resumen de Capacidad
                </h6>
            </div>
            <div class="card-body">
                @if (buseta != null)
                {
                    var ocupacion = asignaciones?.Count ?? 0;
                    var porcentaje = buseta.Capacidad > 0 ? (ocupacion * 100) / buseta.Capacidad : 0;

                    <div class="row">
                        <div class="col-md-4">
                            <strong>Capacidad Total:</strong> @buseta.Capacidad
                        </div>
                        <div class="col-md-4">
                            <strong>Estudiantes Asignados:</strong> @ocupacion
                        </div>
                        <div class="col-md-4">
                            <strong>Disponibilidad:</strong> @(buseta.Capacidad - ocupacion)
                        </div>
                    </div>
                    <div class="mt-2">
                        <div class="progress">
                            <div class="progress-bar @(porcentaje > 80 ? "bg-danger" : porcentaje > 60 ? "bg-warning" : "bg-success")"
                                 role="progressbar"
                                 style="width: @porcentaje%"
                                 aria-valuenow="@porcentaje"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                                @porcentaje.ToString("F1")%
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>