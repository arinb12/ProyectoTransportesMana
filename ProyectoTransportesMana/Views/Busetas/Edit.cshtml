@model ProyectoTransportesMana.Models.Buseta

@{
    ViewData["Title"] = "Editar Buseta";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<h1 class="mb-4">
    <i class="bi bi-pencil"></i> Editar Buseta
</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" class="needs-validation" novalidate>
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Placa" class="form-label"></label>
                        <input asp-for="Placa" class="form-control" placeholder="Ej: ABC123" />
                        <span asp-validation-for="Placa" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Capacidad" class="form-label"></label>
                        <input asp-for="Capacidad" class="form-control" type="number" min="1" max="50" />
                        <span asp-validation-for="Capacidad" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="NombreConductor" class="form-label"></label>
                        <input asp-for="NombreConductor" class="form-control" placeholder="Nombre completo del conductor" />
                        <span asp-validation-for="NombreConductor" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="CedulaConductor" class="form-label"></label>
                        <input asp-for="CedulaConductor" class="form-control" placeholder="Número de cédula" />
                        <span asp-validation-for="CedulaConductor" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Jornada" class="form-label"></label>
                        <select asp-for="Jornada" class="form-select">
                            <option value="">Seleccione una jornada</option>
                            <option value="Mañana">Mañana</option>
                            <option value="Tarde">Tarde</option>
                            <option value="Noche">Noche</option>
                            <option value="Completa">Completa</option>
                        </select>
                        <span asp-validation-for="Jornada" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="HorarioServicio" class="form-label"></label>
                        <input asp-for="HorarioServicio" class="form-control" placeholder="Ej: 6:00 AM - 2:00 PM" />
                        <span asp-validation-for="HorarioServicio" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="Activa" class="form-check-input" type="checkbox" />
                    <label asp-for="Activa" class="form-check-label">
                        @if (Model.Activa)
                        {
                            <i class="bi bi-circle-fill text-success"></i>
                        }
                        else
                        {
                            <i class="bi bi-circle text-secondary"></i>
                        }
                        Buseta Activa
                    </label>
                </div>
                <small class="form-text text-muted">Marque si la buseta está disponible para servicio</small>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Guardar Cambios
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle"></i> Información Actual
                </h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <strong>ID Buseta:</strong> @Model.Id
                </p>
                <p class="card-text">
                    <strong>Estado:</strong>
                    @if (Model.Activa)
                    {
                        <span class="badge bg-success">
                            <i class="bi bi-circle-fill"></i> Activa
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">
                            <i class="bi bi-circle"></i> Inactiva
                        </span>
                    }
                </p>
                <hr>
                <p class="card-text">
                    <small class="text-muted">
                        <i class="bi bi-lightbulb"></i>
                        Los cambios se aplicarán inmediatamente al guardar.
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
