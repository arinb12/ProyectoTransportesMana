@model ProyectoTransportesMana.Models.Buseta

@{
    ViewData["Title"] = "Eliminar Buseta";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<h1 class="mb-4 text-danger">
    <i class="bi bi-exclamation-triangle"></i> Eliminar Buseta
</h1>

<div class="alert alert-warning">
    <h5 class="alert-heading">
        <i class="bi bi-exclamation-triangle"></i> Confirmación de Eliminación
    </h5>
    <p>¿Está seguro de que desea eliminar esta buseta? Esta acción no se puede deshacer.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0">
            <i class="bi bi-bus-front"></i> Información de la Buseta
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Id):</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Placa):</dt>
                    <dd class="col-sm-8"><strong>@Model.Placa</strong></dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Capacidad):</dt>
                    <dd class="col-sm-8">@Model.Capacidad pasajeros</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NombreConductor):</dt>
                    <dd class="col-sm-8">@Model.NombreConductor</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Jornada):</dt>
                    <dd class="col-sm-8">@Model.Jornada</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.HorarioServicio):</dt>
                    <dd class="col-sm-8">@Model.HorarioServicio</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CedulaConductor):</dt>
                    <dd class="col-sm-8">@Model.CedulaConductor</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Activa):</dt>
                    <dd class="col-sm-8">
                        @if (Model.Activa)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-circle-fill"></i> Activa
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="bi bi-circle"></i> Inactiva
                            </span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirmar Eliminación
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>