@model ProyectoTransportesMana.Models.Buseta

@{
    ViewData["Title"] = "Eliminar Buseta";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<h1 class="mb-4 text-danger">Eliminar Buseta</h1>

<div class="alert alert-warning">
    <p>¿Seguro que deseas eliminar esta buseta?</p>
</div>

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Id)</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nombre)</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Placa)</dt>
    <dd class="col-sm-10">@Model.Placa</dd>
</dl>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Eliminar
    </button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
