        console.log('layout: window.API_BASE=', window.API_BASE, ' window.CURRENT_USER_ID=', window.CURRENT_USER_ID, ' ROL=', window.ROL_ACTUAL);
    </script>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function editarHorario(elemento) {
            const fila = elemento.closest('tr');
            const celdas = fila.querySelectorAll('td');

            for (let i = 2; i <= 6; i++) {
                const valorActual = celdas[i].innerText;
                celdas[i].innerHTML = `<input type="time" class="form-control form-control-sm" value="${convertirHora(valorActual)}">`;
            }

            elemento.onclick = null;
        }

        function convertirHora(hora) {
            try {
                if (!hora) return '';
                const m = hora.replace(/ /g, '').match(/(\d+):(\d+)(am|pm)/i);
                if (!m) return '';
                const [, h, min, ap] = m;
                let horas = parseInt(h, 10);
                if (ap.toLowerCase() === 'pm' && horas !== 12) horas += 12;
                if (ap.toLowerCase() === 'am' && horas === 12) horas = 0;
                return `${horas.toString().padStart(2, '0')}:${min}`;
            } catch (e) {
                return '';
            }
        }

        async function actualizarContadorAlertas() {
            try {
                const span = document.getElementById('notifsCount');
                if (!span) return;

                const userId = window.CURRENT_USER_ID || '0';
                if (!userId || userId === '0') {
                    span.style.display = 'none';
                    return;
                }

                const resp = await fetch(`/Alerta/GetCountAlertasParaUsuario`, {
                    method: 'GET',
                    headers: { 'Accept': 'application/json' },
                    credentials: 'same-origin'
                });

                const text = await resp.text().catch(() => null);

                if (!resp.ok) {
                    console.warn('Error conteo alertas', resp.status, text);
                    return;
                }

                let data;
                try { data = JSON.parse(text); } catch (e) { data = null; }

                const count = (data && (data.count ?? data.Total ?? data.total ?? 0)) || 0;
                span.textContent = count;
                span.style.display = count > 0 ? 'inline-block' : 'none';
            } catch (err) {
                console.error('actualizarContadorAlertas error:', err);
            }
        }

        async function marcarAlertasComoLeidas() {
            try {
                const userId = window.CURRENT_USER_ID || '0';
                if (!userId || userId === '0') return;

                const resp = await fetch(`/Alerta/MarcarAlertasComoLeidas`, {
                    method: 'POST',
                    credentials: 'same-origin'
                });

                if (resp.ok) {
                    await actualizarContadorAlertas();
                } else {
                    const txt = await resp.text().catch(() => null);
                    console.warn('No se pudo marcar como leídas', resp.status, txt);
                }
            } catch (err) {
                console.error('Error marcando alertas como leídas', err);
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            actualizarContadorAlertas();
            setInterval(actualizarContadorAlertas, 60 * 1000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
