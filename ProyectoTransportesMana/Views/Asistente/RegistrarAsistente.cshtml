@{
    ViewData["Title"] = "Registrar Asistente";
    Layout = "_LayoutInterno";
    var open = (bool?)ViewBag.OpenModal ?? false;
}

@section Styles {
    <link rel="stylesheet" href="~/css/asistentes/asistentes.css" />
    <style>
        .form-control:valid {
            border-color: #198754;
            padding-right: 2.25rem;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%23198754' viewBox='0 0 16 16'%3e%3cpath d='M16 2.3L6 15.3 0 8.6l1.5-1.4L6 12.2 14.5 1z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }

        .form-control:invalid {
            border-color: #dc3545;
            padding-right: 2.25rem;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%23dc3545' viewBox='0 0 16 16'%3e%3cpath d='M16 14L2 0 0 2l14 14zM2 14L16 0l-2-2L0 12z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }
    </style>
}

<h1 class="mt-4">Registrar Asistente</h1>

<!-- MODAL REGISTRO ASISTENTE  -->
<div class="modal fade" id="modalAsistente" tabindex="-1" aria-labelledby="modalAsistenteLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-dark fw-bold" id="modalAsistenteLabel">
                    <i class="fas fa-user me-2"></i>Registrar Asistente
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formAsistente" class="row g-3 needs-validation" novalidate>
                    <input type="hidden" id="asistenteId" value="" />

               
                    <div class="col-md-6">
                        <label for="nombre" class="form-label">Nombre completo</label>
                        <input type="text" class="form-control" id="nombre" required minlength="3" />
                        <div class="invalid-feedback">Ingrese al menos 3 caracteres.</div>
                    </div>

               
                    <div class="col-md-6">
                        <label for="telefono" class="form-label">Teléfono (8 dígitos)</label>
                        <input type="tel" class="form-control" id="telefono" pattern="^\d{8}$" required />
                        <div class="invalid-feedback">Teléfono inválido. Debe tener 8 dígitos.</div>
                    </div>

              
                    <div class="col-md-6">
                        <label for="cedula" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="cedula" pattern="^\d{9}$" required />
                        <div class="invalid-feedback">La cédula debe tener exactamente 9 números.</div>
                    </div>

                 
                    <div class="col-md-6">
                        <label for="correo" class="form-label">Correo electrónico (opcional)</label>
                        <input type="email" class="form-control" id="correo" placeholder="ejemplo@correo.com" />
                        <div class="invalid-feedback">Correo inválido.</div>
                    </div>

                   
                    <div class="col-md-6">
                        <label for="salario" class="form-label">Salario</label>
                        <input type="number" class="form-control" id="salario" step="0.01" min="0" required />
                        <div class="invalid-feedback">Ingrese una cantidad válida.</div>
                    </div>

              
                    <div class="col-md-6">
                        <label for="buseta" class="form-label">Asignar buseta</label>
                        <select class="form-select" id="buseta" required>
                            <option selected disabled value="">Seleccione una buseta</option>
                            <option value="1">Buseta 1 - ABC123</option>
                            <option value="2">Buseta 2 - DEF456</option>
                            <option value="3">Buseta 3 - GHI789</option>
                        </select>
                        <div class="invalid-feedback">Seleccione una buseta.</div>
                    </div>

               
                    <div class="col-md-12 d-flex align-items-center">
                        <input type="checkbox" id="activo" class="form-check-input me-2" checked />
                        <label class="form-check-label" for="activo">Activo</label>
                    </div>

                    <div class="col-12 text-end">
                        <button type="submit" class="btn pastel-btn me-2">
                            <i class="fas fa-save me-1"></i> Guardar
                        </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<!-- MODAL REGISTRO/EDICIÓN ASISTENTE -->
@section Scripts {
    <script>
        // Validacion bootstrap
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', (event) => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Abre el modal automáticamente si viene el flag o el hash
        document.addEventListener('DOMContentLoaded', function () {
            const fromServer = @((open ? "true" : "false").ToLower());
            const url = new URL(window.location.href);
            const fromQuery = url.searchParams.get('openModal') === 'true';
            const fromHash = window.location.hash === '#modalAsistente';

            if (fromServer || fromQuery || fromHash) {
                const modalEl = document.getElementById('modalAsistente');
                if (modalEl) {
                    const modal = new bootstrap.Modal(modalEl);
                    modal.show();
         
          // Codigo para redirigir al cerrar el modal (X, Cancelar, ESC, etc)
        modalEl.addEventListener('hidden.bs.modal', function () {
            window.location.href = '@Url.Action("ConsultarAsistente", "Asistente")';
        });

                }
            }
        });
    </script>
}