@model ProyectoTransportesMana.Models.AsistenteModel

@{
    ViewData["Title"] = "Registrar Asistente";
    Layout = "_LayoutInterno";
    var open = (bool?)ViewBag.OpenModal ?? false;
}

@section Styles {
    <link rel="stylesheet" href="~/css/asistentes/asistentes.css" />
    <style>
        .form-control:valid {
            border-color: #198754;
            padding-right: 2.25rem;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%23198754' viewBox='0 0 16 16'%3e%3cpath d='M16 2.3L6 15.3 0 8.6l1.5-1.4L6 12.2 14.5 1z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }

        .form-control:invalid {
            border-color: #dc3545;
            padding-right: 2.25rem;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='%23dc3545' viewBox='0 0 16 16'%3e%3cpath d='M16 14L2 0 0 2l14 14zM2 14L16 0l-2-2L0 12z'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }
    </style>
}

<h1 class="mt-4">Registrar Asistente</h1>

<!-- ===================== MODAL REGISTRO ASISTENTE ===================== -->
<div class="modal fade" id="modalAsistente" tabindex="-1" aria-labelledby="modalAsistenteLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-dark fw-bold" id="modalAsistenteLabel">
                    <i class="fas fa-user me-2"></i>Registrar Asistente
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formAsistente"
                      class="row g-3 needs-validation"
                      asp-action="RegistrarAsistente"
                      asp-controller="Asistente"
                      method="post"
                      novalidate>
                    @Html.AntiForgeryToken()

                    <div class="col-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
                    </div>

                    <input type="hidden" asp-for="Id" />

                    <!-- Nombre -->
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" minlength="3" required />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <!-- Teléfono -->
                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label"></label>
                        <input asp-for="Telefono" class="form-control" pattern="^\d{8}$" required />
                        <span asp-validation-for="Telefono" class="text-danger small"></span>
                    </div>

                    <!-- Cédula -->
                    <div class="col-md-6">
                        <label asp-for="Cedula" class="form-label"></label>
                        <input asp-for="Cedula" class="form-control" pattern="^\d{9}$" required />
                        <span asp-validation-for="Cedula" class="text-danger small"></span>
                    </div>

                    <!-- Correo (opcional) -->
                    <div class="col-md-6">
                        <label asp-for="Correo" class="form-label"></label>
                        <input asp-for="Correo" class="form-control" type="email" placeholder="ejemplo@correo.com" />
                        <span asp-validation-for="Correo" class="text-danger small"></span>
                    </div>

                    <!-- Salario -->
                    <div class="col-md-6">
                        <label asp-for="Salario" class="form-label"></label>
                        <input asp-for="Salario" class="form-control" type="number" step="0.01" min="0" required />
                        <span asp-validation-for="Salario" class="text-danger small"></span>
                    </div>

                    <!-- Buseta -->
                    <div class="col-md-6">
                        <label asp-for="BusetaId" class="form-label"></label>
                        <select asp-for="BusetaId" class="form-select" asp-items="Model.BusetasSelectList" required>
                            <option selected disabled value="">Seleccione una buseta</option>
                        </select>
                        <span asp-validation-for="BusetaId" class="text-danger small"></span>
                    </div>

                    <!-- Activo -->
                    <div class="col-md-12 d-flex align-items-center">
                        <input asp-for="Activo" class="form-check-input me-2" />
                        <label asp-for="Activo" class="form-check-label"></label>
                        <span asp-validation-for="Activo" class="text-danger small ms-2"></span>
                    </div>

                    <div class="col-12 text-end">
                        <button type="submit" class="btn pastel-btn me-2">
                            <i class="fas fa-save me-1"></i> Guardar
                        </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<!-- =================== /MODAL =================== -->
@section Scripts {
    <script>
        // Validación Bootstrap
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', (event) => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Auto-abrir modal si viene flag o hash y volver al listado al cerrar
        document.addEventListener('DOMContentLoaded', function () {
            const fromServer = @(open.ToString().ToLower()); // <- evita TS1109
            const url = new URL(window.location.href);
            const fromQuery = url.searchParams.get('openModal') === 'true';
            const fromHash  = window.location.hash === '#modalAsistente';

            const modalEl = document.getElementById('modalAsistente');
            if (modalEl && (fromServer || fromQuery || fromHash)) {
                const modal = new bootstrap.Modal(modalEl);
                modal.show();

                // Al cerrar modal => regresar al listado
                modalEl.addEventListener('hidden.bs.modal', function () {
                    window.location.href = '@Url.Action("ConsultarAsistente", "Asistente")';
                });
            }
        });
    </script>
}
