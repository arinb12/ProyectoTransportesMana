<script>
    function editarHorario(elemento) {
        const filas = document.querySelectorAll('#datatablesSimple tbody tr');
        filas.forEach(fila => {
            const salida = fila.children[1];
            const entrega = fila.children[2];

            salida.innerHTML = `<input type="time" class="form-control form-control-sm" value="${convertirHora(salida.innerText)}">`;
            entrega.innerHTML = `<input type="time" class="form-control form-control-sm" value="${convertirHora(entrega.innerText)}">`;
        });

        elemento.style.display = "none";
        document.getElementById("btnGuardarHorario").style.display = "inline-block";
    }

    function convertirHora(hora) {
        // Convertidor básico para formato 12h a 24h si lo deseas
        const [h, m, ap] = hora.replace(/ /g, '').match(/(\d+):(\d+)(am|pm)/i).slice(1);
        let horas = parseInt(h);
        if (ap.toLowerCase() === 'pm' && horas !== 12) horas += 12;
        if (ap.toLowerCase() === 'am' && horas === 12) horas = 0;
        return `${horas.toString().padStart(2, '0')}:${m}`;
    }

    function guardarHorario() {
        const filas = document.querySelectorAll('#datatablesSimple tbody tr');
        filas.forEach(fila => {
            const salida = fila.children[1];
            const entrega = fila.children[2];

            const salidaInput = salida.querySelector('input');
            const entregaInput = entrega.querySelector('input');

            if (salidaInput && entregaInput) {
                salida.innerText = convertirHora12h(salidaInput.value);
                entrega.innerText = convertirHora12h(entregaInput.value);
            }
        });

        document.getElementById("btnEditarHorario").style.display = "inline-block";
        document.getElementById("btnGuardarHorario").style.display = "none";
    }

    // Convierte de 24h a 12h
    function convertirHora12h(hora24) {
        const [h, m] = hora24.split(':');
        let horas = parseInt(h);
        const ampm = horas >= 12 ? 'pm' : 'am';
        horas = horas % 12 || 12;
        return `${horas}:${m} ${ampm}`;
    }

    function abrirChatModal() {
        var chatModal = new bootstrap.Modal(document.getElementById('chatModal'));
        chatModal.show();
    }

    function enviarMensaje() {
        const input = document.getElementById('chatInput');
        const mensajes = document.getElementById('chatMensajes');
        if (input.value.trim() !== "") {
            mensajes.innerHTML += `<div class="mb-2"><strong>Tú:</strong> ${input.value}</div>`;
            input.value = "";
            mensajes.scrollTop = mensajes.scrollHeight;
        }
    }
</script>
<div class="modal fade" id="chatModal" tabindex="-1" aria-labelledby="chatModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="chatModalLabel">Chat con el Conductor</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Cerrar"></button>
            </div>
            <div class="modal-body" style="max-height:300px;overflow-y:auto;">
                <div id="chatMensajes" style="font-size: 0.95em;">
                    <!-- Mensajes de ejemplo -->
                    <div class="mb-2"><strong>Tú:</strong> Hola, ¿a qué hora llega la buseta?</div>
                    <div class="mb-2"><strong>Conductor:</strong> Llegamos en 10 minutos.</div>
                </div>
            </div>
            <div class="modal-footer d-flex flex-row gap-2 w-100">
                <input type="text" id="chatInput" class="form-control form-control-sm flex-grow-1"
                       placeholder="Escribe tu mensaje...">

            </div>
            <button type="button" class="btn btn-primary btn-sm" onclick="enviarMensaje()">Enviar</button>
        </div>
    </div>
</div>
