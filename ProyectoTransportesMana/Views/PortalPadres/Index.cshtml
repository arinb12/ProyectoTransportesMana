@model ProyectoTransportesMana.Models.PortalPadresViewModel

@{
    ViewData["Title"] = "Portal Padres";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/estudiantes/gestion-estudiantes.css" />
}

<div class="container-fluid p-4">
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4 text-center">Bienvenido al Portal de Padres de Familia</h1>
                <ol class="breadcrumb mb-4 justify-content-center">
                    <li class="breadcrumb-item active">Resumen de datos</li>
                </ol>

                <!-- Detalles de viaje (inactivo) -->
                <div class="row justify-content-center">
                    <div>
                        <div class="card mb-4 border-secondary">
                            <div class="card-header bg-secondary text-white text-center">
                                <i class="fas fa-bus me-1"></i> Detalles de viaje
                            </div>
                            <div class="card-body text-center text-muted">
                                <p class="mb-1">No hay un viaje activo en este momento.</p>
                                <p class="mb-0">
                                    Cuando exista un viaje en curso, aquí se mostrarán los detalles del recorrido
                                    y el estado del traslado de su hijo.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Información de conductor y ayudante -->
                <div class="row justify-content-center mt-3">
                    <div>
                        <div class="card mb-4 shadow">
                            <div class="card-header bg-info d-flex align-items-center">
                                <i class="fas fa-id-badge me-2 text-dark"></i>
                                Información del personal asignado
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered mb-0">
                                    <tbody>
                                        <tr>
                                            <th style="width: 30%">Conductor</th>
                                            <td>
                                                @if (Model?.Conductor != null)
                                                {
                                                    @Model.Conductor.NombreCompleto <br />
                                                    <small class="text-muted">
                                                        Teléfono: @Model.Conductor.Telefono
                                                    </small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin conductor asignado</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Ayudante</th>
                                            <td>
                                                @if (Model?.Ayudante != null)
                                                {
                                                    @Model.Ayudante.NombreCompleto <br />
                                                    <small class="text-muted">
                                                        Teléfono: @Model.Ayudante.Telefono
                                                    </small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Sin ayudante asignado</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>Estudiantes transportados</th>
                                            <td>
                                                @if (Model?.Hijos != null && Model.Hijos.Any())
                                                {
                                                    @string.Join(", ", Model.Hijos.Select(h => h.NombreEstudiante))
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Aún no hay estudiantes asociados</span>
                                                }
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Horario mensual de los hijos -->
                <div class="row justify-content-center mt-3">
                    <div>
                        <div class="card mb-4 shadow">
                            <div class="card-header bg-info d-flex align-items-center">
                                <i class="fas fa-calendar-alt me-2 text-dark"></i>
                                Horario mensual y cambios
                            </div>
                            <div class="card-body">

                                @if (Model?.Hijos != null && Model.Hijos.Any())
                                {
                                    foreach (var hijo in Model.Hijos)
                                    {
                                        <div class="mb-4">
                                           <h5 class="mb-2">
                                                @hijo.NombreEstudiante
                                                <small class="text-muted">(@hijo.Institucion)</small>
                                            </h5>

                                            @if (hijo.HorarioAnual != null && hijo.HorarioAnual.Any())
                                            {
                                                <table class="table table-sm table-bordered mb-3">
                                                    <thead>
                                                        <tr>
                                                            <th style="width: 20%">Día</th>
                                                            <th style="width: 40%">Hora entrada</th>
                                                            <th style="width: 40%">Hora salida</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var dia in hijo.HorarioAnual)
                                                        {
                                                            string nombreDia = dia.DiaSemana switch
                                                            {
                                                                1 => "Lunes",
                                                                2 => "Martes",
                                                                3 => "Miércoles",
                                                                4 => "Jueves",
                                                                5 => "Viernes",
                                                                6 => "Sábado",
                                                                7 => "Domingo",
                                                                _ => "Día"
                                                            };

                                                            <tr>
                                                                <td>@nombreDia</td>
                                                                <td>@(dia.HoraEntrada?.ToString(@"hh\:mm") ?? "-")</td>
                                                                <td>@(dia.HoraSalida?.ToString(@"hh\:mm") ?? "-")</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            }
                                            else
                                            {
                                                <p class="text-muted">No hay horario anual registrado para este estudiante.</p>
                                            }


                                            <button class="btn btn-sm btn-primary"
                                                    onclick="abrirModalCambioHorario(@hijo.IdEstudiante, '@hijo.NombreEstudiante')">
                                                Registrar cambio de horario
                                            </button>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted mb-0">
                                        Aún no hay hijos registrados para este usuario.
                                    </p>
                                }

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </main>

        <footer class="py-4 bg-light mt-auto">
            <div class="container-fluid px-4">
                <div class="d-flex align-items-center justify-content-between small">
                    <div class="text-muted">Copyright &copy; Transportes Maná</div>
                    <div>
                        <a href="#">Política de privacidad</a>
                        &middot;
                        <a href="#">Términos y condiciones</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</div>

<!-- Modal para registrar cambios de horario -->
<div class="modal fade" id="cambioHorarioModal" tabindex="-1" aria-labelledby="cambioHorarioLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formCambioHorario">
                <div class="modal-header">
                    <h5 class="modal-title" id="cambioHorarioLabel">Registrar cambio de horario</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">

                    <input type="hidden" id="IdEstudianteCambio" />

                    <div class="mb-3">
                        <label class="form-label">Estudiante</label>
                        <input type="text" class="form-control" id="NombreEstudianteCambio" disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Fecha</label>
                        <input type="date" class="form-control" id="FechaCambio" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tipo</label>
                        <select class="form-select" id="TipoCambio" required>
                            <option value="">Seleccione</option>
                            <option value="Entrada">Entrada</option>
                            <option value="Salida">Salida</option>
                            <option value="Ambos">Ambos</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Hora ajustada</label>
                        <input type="time" class="form-control" id="HoraAjustadaCambio" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Motivo</label>
                        <textarea class="form-control" id="MotivoCambio" rows="3"
                                  placeholder="Ejemplo: cita médica, actividad escolar, retraso, etc."
                                  required></textarea>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary btn-sm">Guardar cambio</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    

    <script>
        function abrirModalCambioHorario(idEstudiante, nombre) {
            document.getElementById('IdEstudianteCambio').value = idEstudiante;
            document.getElementById('NombreEstudianteCambio').value = nombre;
            document.getElementById('FechaCambio').value = '';
            document.getElementById('TipoCambio').value = '';
            document.getElementById('HoraAjustadaCambio').value = '';
            document.getElementById('MotivoCambio').value = '';

            var modal = new bootstrap.Modal(document.getElementById('cambioHorarioModal'));
            modal.show();
        }

        document.getElementById('formCambioHorario').addEventListener('submit', function (e) {
            e.preventDefault();

            var idEstudiante = document.getElementById('IdEstudianteCambio').value;
            var fecha = document.getElementById('FechaCambio').value;
            var tipo = document.getElementById('TipoCambio').value;
            var horaAjustada = document.getElementById('HoraAjustadaCambio').value;
            var motivo = document.getElementById('MotivoCambio').value;

            if (!idEstudiante || !fecha || !tipo || !horaAjustada || !motivo) {
                alert("Complete todos los campos.");
                return;
            }

            var tabla = document.querySelector('table[data-id-hijo="' + idEstudiante + '"] tbody');

            var tr = document.createElement('tr');
            tr.innerHTML =
                '<td>' + new Date(fecha).toLocaleDateString() + '</td>' +
                '<td>' + tipo + '</td>' +
                '<td class="text-muted">Horario regular</td>' +
                '<td>' + horaAjustada + '</td>' +
                '<td>' + motivo + '</td>';

            var filaVacia = tabla.querySelector('tr td[colspan="5"]');
            if (filaVacia) {
                filaVacia.parentElement.remove();
            }

            tabla.appendChild(tr);

            var modal = bootstrap.Modal.getInstance(document.getElementById('cambioHorarioModal'));
            modal.hide();

            
        });
    </script>
}
