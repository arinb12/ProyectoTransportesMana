@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@model ProyectoTransportesMana.Models.Perfil.PerfilVm
@{
    ViewData["Title"] = "Mi Perfil";
    Layout = "_LayoutInterno";

    var foto = string.IsNullOrWhiteSpace(Model.FotoPerfil)
        ? "/imagenes/perfiles/default.png"
        : Model.FotoPerfil;

    int rol = HttpContextAccessor.HttpContext?.Session.GetInt32("IdRol") ?? 0;
    bool esAdmin = rol == 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/perfil/perfil.css" />
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">

        @if (TempData["Ok"] != null)
        {
            <div class="alert alert-success perfil-alerta">@TempData["Ok"]</div>
        }
        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-danger perfil-alerta">@ViewBag.Mensaje</div>
        }

        <div class="card perfil-card shadow-sm">
            <div class="card-header">
                <i class="bi bi-person-circle me-2"></i>Mi Perfil
            </div>

            <div class="card-body">
                <div class="d-flex align-items-center gap-3 mb-4">
                    <img src="@foto"
                         class="perfil-avatar"
                         alt="Foto de perfil" />

                    <div>
                        <div class="perfil-nombre">
                            @Model.Nombre @Model.PrimerApellido @Model.SegundoApellido
                        </div>
                        <div class="perfil-id">
                            ID: @Model.IdUsuario
                        </div>
                    </div>
                </div>

                <form asp-action="Index" asp-controller="Perfil" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input class="form-control" value="@Model.Nombre" disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Primer Apellido</label>
                        <input class="form-control" value="@Model.PrimerApellido" disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Segundo Apellido</label>
                        <input class="form-control" value="@Model.SegundoApellido" disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Correo</label>
                        <input asp-for="Correo" class="form-control" placeholder="correo@dominio.com" />
                    </div>

                    @if (!esAdmin)
                    {
                        <div class="mb-3">
                            <label class="form-label">Teléfono</label>
                            <input asp-for="Telefono" class="form-control" placeholder="8888-8888" />
                        </div>
                    }
                    else
                    {
                        <input type="hidden" asp-for="Telefono" value="" />
                    }

                    <div class="mb-3">
                        <label class="form-label">Imagen de perfil</label>
                        <input type="file" name="Imagen" class="form-control" accept="image/*" />
                    </div>

                    <button type="submit" class="perfil-btn-guardar w-100">
                        <i class="bi bi-save me-2"></i>Guardar cambios
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
