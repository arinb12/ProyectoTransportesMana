@{
    ViewData["Title"] = "Recuperar contraseña";
    Layout = "_LayoutExterno";
}

<div class="login-container">
    <div class="background-blur"></div>

    <div class="login-card shadow-lg">
        <div class="login-left">
            <h2 class="brand-title">TRANSPORTE ESCOLAR MANÁ</h2>
            <h3>Recuperar contraseña</h3>
            <p>Escriba su correo para enviar instrucciones.</p>

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Mensaje
                </div>
            }

            <form class="login-form" method="post" asp-action="RecoverPassword" asp-controller="Home">
                @Html.AntiForgeryToken()
                <input type="email" name="correo" placeholder="Correo electrónico" required />
                <button type="submit" class="btn-login">Enviar</button>
            </form>

            <p class="back-login">
                <a asp-action="Index" asp-controller="Home">← Volver al inicio de sesión</a>
            </p>
        </div>

        <div class="login-right">
            <div class="overlay"></div>
            <div class="info-text">
                <h2>Tu seguridad es importante</h2>
                <p>Recupera el acceso de forma segura.</p>
            </div>
        </div>
    </div>
</div>
