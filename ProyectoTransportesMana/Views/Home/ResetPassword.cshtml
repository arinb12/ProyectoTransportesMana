@{
    ViewData["Title"] = "Restablecer Contraseña";
    Layout = "_LayoutExterno";
}
<div class="login-card">
    <div class="login-header">
        <h2>TRANSPORTE ESCOLAR MANÁ</h2>
    </div>
    <div class="login-body">
        <h3>Restablece tu contraseña 🔐</h3>
        <p>Ingresa tu nueva contraseña a continuación.</p>

        <form class="login-form" action="/reset-password" method="POST">
            <!-- Hidden token from the URL -->
            <input type="hidden" name="token" value="[[TOKEN_FROM_URL]]" />

            <input type="password" name="new_password" placeholder="Nueva contraseña" required />
            <input type="password" name="confirm_password" placeholder="Confirmar contraseña" required />

            <button type="submit">Actualizar contraseña</button>
        </form>

        <p class="back-login">
            <a href="login.html">← Volver al inicio de sesión</a>
        </p>
    </div>
    </div>