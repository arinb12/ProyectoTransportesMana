@model List<ProyectoTransportesMana.Models.InstitucionModel>
@{
    ViewData["Title"] = "Instituciones";
    Layout = "_LayoutInterno";
}

@section Styles {
    <link rel="stylesheet" href="~/css/instituciones/instituciones.css" />
}


<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="text-dark">Gestión de Instituciones</h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header bg-info text-dark fw-bold">
        <i class="fas fa-school me-2"></i>Listado de Instituciones
    </div>
    <div class="card-body">
        <table id="tablaInstituciones" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@i.Nombre</td>
                        <td class="text-center">
                            <a href="#" class="text-primary"
                               onclick="abrirModalEditar(@i.IdInstitucion, '@i.Nombre')">
                                <i class="fas fa-edit"></i>
                            </a>

                            <a href="#" class="text-danger ms-3"
                               onclick="eliminarInstitucion(@i.IdInstitucion)">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modalInstitucion" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-4">
            <div class="modal-header bg-info">
                <h5 class="modal-title fw-bold">
                    <i class="fas fa-building me-2"></i><span id="tituloModal">Nueva Institución</span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form id="formInstitucion">
                @Html.AntiForgeryToken()


                <div class="modal-body">
                    <input type="hidden" id="IdInstitucion" name="IdInstitucion" />

                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input id="Nombre" name="Nombre" class="form-control" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn pastel-btn">Guardar</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        function abrirModalEditar(id, nombre) {

            document.getElementById("tituloModal").innerText = "Editar Institución";


            document.getElementById("IdInstitucion").value = id;
            document.getElementById("Nombre").value = nombre;


            const modal = new bootstrap.Modal(document.getElementById("modalInstitucion"));
            modal.show();
        }
    </script>

    <script>
        let antiToken = "";

        async function cargarToken() {
            const resp = await fetch("/Instituciones/Token");
            const data = await resp.json();
            antiToken = data.token;
        }

        window.addEventListener("DOMContentLoaded", async () => {
            await cargarToken();
            console.log("Token cargado:", antiToken);
        });

        document.getElementById("formInstitucion").addEventListener("submit", async e => {
            e.preventDefault();

            if (!antiToken) {
                alert("Error: el token no está cargado.");
                return;
            }

            const payload = {
                IdInstitucion: document.getElementById("IdInstitucion").value,
                Nombre: document.getElementById("Nombre").value
            };

            const isEdit = payload.IdInstitucion && payload.IdInstitucion > 0;
            const url = isEdit
                ? `/Instituciones/ActualizarInstitucion`
                : `/Instituciones/CrearInstitucion`;

            const resp = await fetch(url, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "RequestVerificationToken": antiToken
                },
                body: JSON.stringify(payload)
            });

                  if (resp.ok) {
            Swal.fire({
                title: "¡Actualizado!",
                text: "La institución se guardó correctamente.",
                icon: "success",
                timer: 1500,
                showConfirmButton: false
            });

            setTimeout(() => location.reload(), 1600);
        } else {
            Swal.fire("Error", "No se pudo guardar la institución", "error");
        }
        });

        async function eliminarInstitucion(id) {
            const resp = await fetch(`/Instituciones/EliminarInstitucion/${id}`, { method: "DELETE" });

            if (resp.ok) location.reload();
            else alert("Error al eliminar");
        }

                function eliminarInstitucion(id) {
            Swal.fire({
                title: "¿Eliminar institución?",
                text: "Esta acción no se puede deshacer.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Sí, eliminar",
                cancelButtonText: "Cancelar"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/Instituciones/EliminarInstitucion?id=" + id,
                        type: "DELETE",
                        success: function (resp) {
                            if (resp.success) {
                                Swal.fire("Éxito", resp.message, "success");
                                setTimeout(() => location.reload(), 1500);
                            } else {
                                Swal.fire("Error", resp.message, "error");
                            }
                        }
                    });
                }
            });
        }

    </script>
    <script>
        $(document).ready(function () {
            if (window.innerWidth <= 768) {
                $('#tablaInstituciones').DataTable().columns.adjust().responsive.recalc();
            }
        });
    </script>
}
