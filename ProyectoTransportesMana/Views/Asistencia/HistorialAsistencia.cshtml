@using ProyectoTransportesMana.Models
@using ProyectoTransportesMana.Contracts.Busetas

@{
    ViewData["Title"] = "Histórico de Asistencia – Transportes Maná";
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";

    var instituciones = ViewBag.Instituciones as List<InstitucionModel> ?? new();
    var busetas = ViewBag.Busetas as List<BusetaListItemResponse> ?? new();
}

@section Styles {
    <link rel="stylesheet" href="~/css/asistencia/historial-asistencia.css" />
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="text-dark fw-bold">Histórico de Asistencia</h1>
</div>

<div class="historial-filtros pastel-card p-3 mb-4">
    <div class="row g-3">
        <div class="col-md-3">
            <label class="form-label fw-semibold">Fecha</label>
            <input type="date" id="filtroFecha" class="form-control pastel-input" />
        </div>

        <div class="col-md-3">
            <label class="form-label fw-semibold">Escuela</label>
            <select id="filtroEscuela" class="form-select pastel-input">
                <option value="">— Todas —</option>
                @foreach (var i in instituciones)
                {
                    <option value="@i.IdInstitucion">@i.Nombre</option>
                }
            </select>


        </div>

        <div class="col-md-3">
            <label class="form-label fw-semibold">Buseta</label>
            <select id="filtroBuseta" class="form-select pastel-input">
                <option value="">— Todas —</option>
                @foreach (var b in busetas)
                {
                    <option value="@b.Id">@b.Placa - @b.NombreConductor</option>
                }
            </select>

        </div>

        <div class="col-md-3">
            <label class="form-label fw-semibold">Tipo de viaje</label>
            <select id="filtroTipo" class="form-select pastel-input">
                <option value="">— Todos —</option>
                <option value="ida-manana">Ida Mañana</option>
                <option value="ida-tarde">Ida Tarde</option>
                <option value="vuelta-manana">Vuelta Mañana</option>
                <option value="vuelta-tarde">Vuelta Tarde</option>
            </select>
        </div>

        <div class="col-12 d-flex gap-3 mt-2">
            <button id="btnAplicar" class="btn pastel-btn px-4">Aplicar Filtros</button>
            <button id="btnExportar" class="btn bg-pastel-azul px-4">Exportar CSV</button>
        </div>
    </div>
</div>

<!-- Tarjetas Resumen -->
<div class="row resumen-estilos mb-4">
    <div class="col-md-3">
        <div class="resumen-card pastel-card p-3 text-center">
            <h2 id="cardTotal" class="fw-bold">0</h2>
            <p>Total Estudiantes</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="resumen-card pastel-card p-3 text-center">
            <h2 id="cardRecogidos" class="fw-bold text-success">0</h2>
            <p>Recogidos</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="resumen-card pastel-card p-3 text-center">
            <h2 id="cardNoViaja" class="fw-bold text-warning">0</h2>
            <p>No viajan</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="resumen-card pastel-card p-3 text-center">
            <h2 id="cardPendientes" class="fw-bold text-muted">0</h2>
            <p>Pendientes</p>
        </div>
    </div>
</div>

<!-- Tabla -->
<div class="pastel-card p-3">
    <table id="tablaHistorial" class="table pastel-table table-hover w-100">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Escuela</th>
                <th>Buseta</th>
                <th>Tipo de viaje</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Sección</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/asistencia/historial-asistencia.js" asp-append-version="true"></script>
}
